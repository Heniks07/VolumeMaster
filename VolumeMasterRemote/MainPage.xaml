<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VolumeMasterRemote.MainPage">

    <StackLayout VerticalOptions="Fill" HorizontalOptions="Center" x:Name="StackLayout">
        <Label>Enter the Url of the VolumeMasterService</Label>
        <StackLayout Orientation="Horizontal">
            <Entry x:Name="UrlEntry" Placeholder="Url" WidthRequest="200"></Entry>
            <Button Text="Connect" Clicked="Button_OnClicked"></Button>
        </StackLayout>
        <Label Margin="0,50,0,0">Loading Data. This might take a while</Label>
        <ActivityIndicator x:Name="Indicator" IsEnabled="True" IsRunning="True" IsVisible="True"></ActivityIndicator>


    </StackLayout>

</ContentPage>